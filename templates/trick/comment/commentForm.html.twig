
{% if is_granted('ROLE_USER') %}
    <div class="comment-form">
        {{ form_start(commentForm) }}

        {{ form_row(commentForm.content, {
            "label": "Ajouter un commentaire",
            "attr": {
                "placeholder": "Un petit mot ?"
            }
        }) }}

        <button type="submit" class="btn btn-primary comment-btn">Publier</button>

        {{ form_end(commentForm) }}
    </div>
{% else %}
    <div class="mx-auto" style="max-width: 500px;">
        <p class="alert-info mb-3 p-3">
            Connectez-vous pour écrire un commentaire.<br>
            Vous êtes nouveau ? <a href="{{ path("registration_route") }}" style="color: whitesmoke;">Inscrivez-vous</a>
        </p>
        {% include "security/loginForm.html.twig" %}
    </div>
{% endif %}